extends ..\layout

block content
  .table-responsive
    table.table.table-hover
      thead
        tr
          th Name
          th Position
          th Number
          th Days
          th Actions
      tbody
        each player in players
          tr
            td #{player.name}
            td #{player.position}
            td #{player.number}
            td #{player.availableDays}
            td
              a(href='/players/edit/#{player.id}')
                span.glyphicon.glyphicon-edit
  a.pull-right(href='/players/new')
    span.btn.btn-primary  Add Player
